<%= render partial: "users/username", locals: { user: @posts[0].author} %>
<ul class='user-posts'>
<% @posts.each_with_index do |post, index| %>
  <li>
  <h4>Post #<%=index + 1%></h4>
  <p><%=post.text%></p>
  <span>Comments: <%= post.comments_counter%>, Likes: <%= post.likes_counter%></span>
  </li>
  <%= render partial: "comment", locals: { post: post } %>
<% end %>
</ul>
