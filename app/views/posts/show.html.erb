  <div class='single-post'>
  <h3><%=@post.title%></h3>
  <h4>Post #<%=@post.id%> by <%=@post.author.name%></h4>
  <span>Comments: <%= @post.comments_counter%>, Likes: <%= @post.likes_counter%></span>
  <p><%=@post.text%></p>
  </div>
  <%= render partial: 'comment', locals: { comments: @post.comments } %>
  <%= link_to 'Add a comment', new_user_post_comment_path(current_user, @post) %>
  <span>
  <%= button_to 'Like', user_post_likes_path(current_user, @post), method: :post %>
  <%= button_to "delete", user_post_path(current_user.id, @post.id), class: "btn btn-danger btn-sm", method: :delete %>
  </span>